# Get Python Image
FROM --platform=linux/amd64 public.ecr.aws/bitnami/python:3.11
ARG OFFLINE="NO"
ARG OFFLINE_SEMGREP_RULESETS=""

ENV OFFLINE="${OFFLINE}"
ENV OFFLINE_SEMGREP_RULESETS="${OFFLINE_SEMGREP_RULESETS}"
ENV GRYPE_DB_CACHE_DIR="${HOME}/.grype"

# Instal prerequisites
RUN curl -sSfL https://raw.githubusercontent.com/anchore/syft/main/install.sh | sh -s -- -b /usr/local/bin && \
    curl -sSfL https://raw.githubusercontent.com/anchore/grype/main/install.sh | sh -s -- -b /usr/local/bin && \
    python3 -m pip install semgrep

RUN RUN if [[ "$OFFLINE" == "YES" ]]; then \
        grype db update && \
        mkdir -p ${HOME}/.semgrep && \
        for i in $OFFLINE_SEMGREP_RULESETS; do curl "https://semgrep.dev/c/${i}" -o "${HOME}/.semgrep/$(basename "${i}").yml"; done \
    fi


#
# Make sure the default dirs are initialized
#
RUN mkdir -p /src && \
    mkdir -p /out && \
    mkdir -p /run/scan/src \
    mkdir -p /ash

WORKDIR /src
VOLUME /src

CMD bash -C /utils/grype-docker-execute.sh
